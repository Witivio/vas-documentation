.nav-item:nth-child(5)
  margin 0 25px

.nav-item:nth-child(5)::after
  position absolute
  content: url(/assets/img/index/flagus1.png)
  transform translate(0, 0)
  margin-left 10px
  margin-top 3px

.hero img
  max-width 450px!important

.video_container
  display: flex
  flex-wrap: wrap
  width: 100%

.video_class
  width: 100%
  margin: 10px 0px;
  border: none
  align-items: center

  
.description_video_class
  display: flex
  width: 100%
  
.webchat_img
  height: 34px

.image_center
  width 80%
  display: flex
  justify-content: center
  margin: 35px

.video_embed
  width: 80%
  height: 550px

.custom-block.tip
  display flex
  flex-direction column 
  align-items flex-start

.video_description
  width: 100px

.video_container_flex
  display: flex
  flex-direction: column
  margin: 50px 0


.p_flex
  display flex
  justify-content center

.sidebar::-webkit-scrollbar {
  display: none;
}

/* Hide scrollbar for IE, Edge and Firefox */
.sidebar {
  -ms-overflow-style: none;  /* IE and Edge */
  scrollbar-width: none;  /* Firefox */
}

.container_item_title
  font-size 1rem
  margin: 25px

.container_item_description
  font-size 1rem
  margin: 25px

.container_image
  height 70px
  display flex
  justify-content center
  align-items flex-start
  img
    height 50px
    padding 15px

.container_items
  padding 3.2rem 0
  margin-top 2.5rem
  display flex
  flex-wrap wrap
  align-items center
  align-content stretch
  justify-content center

.container_item 
  display flex
  width 300px
  height 200px
  margin 2.5rem
  border: 1px solid #eaecef
  border-radius: 5px

.container_item:hover
  background-color: #903163
  color: white
  transition: all .2s
  cursor: pointer
  transform: scale(1.1)

.description_container
  display flex
  width 100%
  justify-content center
  h3
    width 70%
    padding 0 5em
    text-align center

.hero_container
  display flex
  width 100%
  flex-direction column
  max-width 40%

.image_index_documentaion
  height 150px

.home 
  max-width 100%!important
  padding 0px!important
 
.theme-default-content:not(.custom)
  max-width 80%


.footer
  color white!important


@media (max-width: $MQMobile)
  .video_embed
    width: 80%
    height: 100%


@media (max-width: $MQMobileNarrow)
  .video_embed
    width: 80%
    height: 100%

@media (max-width: 1024px)
  .video_embed
    width: 80%
    height: 100%

  .site-name
    font-size .7em!important
